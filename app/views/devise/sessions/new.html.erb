
<div id="welcome">
		<p class="active">Welcome back to KeepUp</p>
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: "msform"}) do |f| %>
		<fieldset>
			<h2>Login</h2>
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true %>
	  </div>

	  <div class="field">
	    <%= f.label :password %><br />
	    <%= f.password_field :password, autocomplete: "off" %>
	  </div>

	  <% if devise_mapping.rememberable? -%>
	    <div class="field">
	      <%= f.check_box :remember_me %>
	      <%= f.label :remember_me %>
	    </div>
	  <% end -%>

	  <div class="actions">
	    <%= f.submit "Log in", class: "next action-button" %>
	  </div>
	</fieldset>
	<% end %>

	<%= render "devise/shared/links" %>
	
	
</div>

